@import "../../libs/animate.acss";
page,
.page {
    background-color: #2b6ba5;
    color: #fff;
}

.page {
    padding-bottom: 14px;
}

.user-meta {
    text-align: center;
}

.user-meta .headimg,
.user-meta .headimg image {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    display: inline-block;
}

.user-meta .headimg image {
    border: 3px solid rgba(255, 255, 255, 0.9);
}

.user-meta .nick {
    font-size: 15px;
}

.user-scope {
    text-align: center;
    margin: 12px 0;
}

.user-scope .weui-flex__item {
    position: relative;
    line-height: 1.3;
}

.user-scope .weui-flex__item .line {
    position: absolute;
    height: 21px;
    width: 1px;
    background-color: rgba(255, 255, 255, 0.4);
    right: 0;
    top: 13px;
}

.user-scope .weui-flex__item view {
    font-size: 21px;
}

.user-scope .weui-flex__item view text {
    color: #fff;
}

.user-scope .weui-flex__item text {
    font-size: 13px;
    color: #eee;
}

.card {
    border-radius: 4px;
    background-color: rgba(75, 190, 253, 1);
    margin: 7px 7px;
    color: #fff;
    padding: 9px 12px;
    position: relative;
    overflow: hidden;
    height: 60px;
    z-index: 19;
    text-align: center;
}

.card view {
    font-size: 17px;
    margin-top: 14px;
    line-height: 1;
}

.card text {
    font-size: 13px;
    margin-top: 4px;
    color: rgba(255, 255, 255, 0.6);
}

.card:active {
    background-color: rgba(75, 190, 253, 0.8);
}

.card.bg-red {
    background-color: rgba(237, 123, 175, 1);
}

.card.bg-red:active {
    background-color: rgba(237, 123, 175, 0.8);
}

/* rank */
@import "./rank.acss";
.rank_title {
    font-size: 17px;
    text-align: center;
    line-height: 1.3;
}

.rank_subtitle {
    font-size: 13px;
    text-align: center;
    line-height: 1.3;
    margin-bottom: 14px;
}

.sline {
    height: 3px;
    line-height: 1;
    width: 90px;
    background-color: rgba(255, 255, 255, 0.9);
    margin: 8px auto;
    border-radius: 99px;
}

/* dialog */
@import "../comps/z-sharebox.acss";
.dialog .btns .pull-left,
.dialog .btns .pull-right {
    width: 50%;
    border-top: 1rpx solid #d9d9d9;
}

.dialog .btns button {
    border: 0 none;
    border-radius: 0 !important;
}

.dialog .btns .pull-left button {
    border-right: 1rpx solid #d9d9d9;
}

.dialog .weui-input {
    border: 0 none;
    border-bottom: 2px solid #2b6ba5;
    font-size: 22px;
    color: #000;
    width: 120px;
    margin: 0 auto;
    height: 2em;
    min-height: 2em;
    text-align: center;
}

.dialog .weui-input-placeholder {
    font-size: 16px;
}
