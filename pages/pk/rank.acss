.page-container-classname,
.page {
    background-color: #2b6ba5;
    color: #fff;
}

.rank_item {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    padding: 0 14px;
    margin: 9px 7px;
    height: 60px;
    overflow: hidden;
}

.rank_item .icon {
    padding-top: 15px;
}

.rank_item .icon image {
    width: 28px;
    height: 28px;
}

.rank_item .icon {
    width: 28px;
    font-size: 15px;
    text-align: center;
    padding-top: 17px;
}

.rank_item .headimg {
    padding-left: 12px;
    padding-top: 13px;
}

.rank_item .headimg image {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: #eee;
}

.rank_item .user {
    line-height: 1.2;
    padding-left: 12px;
    padding-top: 13px;
}

.rank_item .user view {
    font-size: 14px;
}

.rank_item .user text {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.6);
}

.rank_item .scope {
    font-size: 18px;
    line-height: 1;
    padding-top: 20px;
}
